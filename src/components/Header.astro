---
import NavList from "./NavList.astro";

const {absolute} = Astro.props;
---

    <style>
        header{
            width: 100%;
            padding: 1rem .5rem;
            display: flex;
		    align-items: center;
		    justify-content: space-between;
            z-index: 150;
            background-color: rgba(255, 255, 255, .8);
        }
        
        .absolute{
            position: absolute;
            top: 0;
        }

        .logo-box{
            display: flex;
            flex-direction: row;
            align-items: center;
            gap: .2rem;
        }

        .logo-box__img{
            width: 2.5rem;
        }

        .logo-box__header{
            padding-top: .5rem;
            font-size: 1.7rem;
            color: var(--color-primary-800);
        }

        .social-media_container{
            display: none;
        }

    </style>
<header class:list={{absolute: absolute}}>
    <!-- Logo box -->
    <div class="logo-box">
        <img alt="Logo-ul bisericii adventiste" src="/logo.webp" class="logo-box__img"/>
        <h2 class="logo-box__header">Maranatha</h2>
    </div>

    <!-- nav list -->
    <NavList />

    <!-- social media icons -->
    <div class="social-media_container">
        <a href="">
            <svg class="sm-icon sm-icon-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 8 19">
                <path fill-rule="evenodd" d="M6.135 3H8V0H6.135a4.147 4.147 0 0 0-4.142 4.142V6H0v3h2v9.938h3V9h2.021l.592-3H5V3.591A.6.6 0 0 1 5.592 3h.543Z" clip-rule="evenodd"/>
              </svg>
        </a>
        <a href="">
            <svg class="sm-icon sm-icon-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 14">
                <path fill-rule="evenodd" d="M19.7 3.037a4.26 4.26 0 0 0-.789-1.964 2.84 2.84 0 0 0-1.984-.84c-2.767-.2-6.926-.2-6.926-.2s-4.157 0-6.928.2a2.836 2.836 0 0 0-1.983.84A4.225 4.225 0 0 0 .3 3.038a30.148 30.148 0 0 0-.2 3.206v1.5c.01 1.071.076 2.142.2 3.206.094.712.363 1.39.784 1.972.604.536 1.38.837 2.187.848 1.583.15 6.731.2 6.731.2s4.161 0 6.928-.2a2.844 2.844 0 0 0 1.985-.84 4.27 4.27 0 0 0 .787-1.965c.124-1.064.19-2.135.2-3.206V6.243a30.672 30.672 0 0 0-.202-3.206ZM8.008 9.59V3.97l5.4 2.819-5.4 2.8Z" clip-rule="evenodd"/>
              </svg>
        </a>
    </div>
</header>