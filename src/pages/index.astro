<style>
    .about-section{
        margin: 2rem .5rem;
    }

    .about-section h2{
        font-size: 2rem;
        color: var(--color-primary-800);
    }

    .about-section div{
        padding: 0 1rem;
        padding-top: 1rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
    }

    .about-section__container p a{
        margin-left: 1rem;
        color: var(--color-primary-700);
    }
    
    .about-section__image-container{
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 2rem;
    }
    .about-section__image-container img{
        width: 10rem;
    }

    @media (min-width: 430px) {
        .about-section__image-container img{
            width: 15rem;
        }
    }

    @media (min-width: 1200px) {
    .about-section div{
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 1rem;
     } 

     .about-section__image-container{
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 2rem;
    }

    .about-section__image-container img{
        width: 45rem;
    }
    }
</style>

